		"bcrypt": "^6.0.0",
		"body-parser": "^2.2.0",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^17.2.1",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"multer": "^2.0.2",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"zod": "^4.1.4"
	},
	"devDependencies": {
		"@types/body-parser": "^1.19.6",
