{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "apps/*"
      ],
      "@/controllers/*": [
        "apps/controllers/*"
      ],
      "@/services/*": [
        "apps/services/*"
      ],
      "@/utils/*": [
        "apps/utils/*"
      ],
      "@/types/*": [
        "apps/types/*"
      ],
      "@/middlewares/*": [
        "apps/middlewares/*"
      ],
      "@/routes/*": [
        "apps/routes/*"
      ],
      "@/config/*": [
        "apps/config/*"
      ],
      "@/prisma/*": [
        "generated/prisma/*"
      ]
    }
  },
  "include": [
    "apps/**/*",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}